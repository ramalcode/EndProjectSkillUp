                            </div>
                        </div>

                        <div class="col-xl-9 col-lg-8 col-md-7 col-sm-12">

                            <div class="tab-content" id="v-pills-tabContent">

                                <!-- requirements -->
                                <div class="tab-pane fade" id="v-pills-requirements" role="tabpanel" aria-labelledby="v-pills-requirements-tab">
                                    <div class="form-group smalls">
                                        <label asp-for="Name">Add Paragraph</label>
                                        <div class="row m-0">
                                            <input asp-for="Name" type="text" class="col-9 col-sm-9 form-control" placeholder="Add Paragraph">
                                            <div class="col-3 col-sm-3">
                                                <button class="btn theme-bg" type="submit"><i class="fas fa-plus"></i></button>
                                            </div>
                                        </div>
                                        
                                    </div>

