                        <a href="#" class="comment-love active"><i class="ti-heart"></i> 07</a>
                    </div>
                </div>
            </div>
            <!--reviews-comments-item end-->

        </div>
    </div>

    <!-- Submit Reviews -->
    <div class="edu_wraper">
        <h4 class="edu_title">Submit Reviews</h4>
        <div class="review-form-box form-submit">
            <form method="post" asp-controller="Course" asp-action="SubmitReview">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="form-group">
                            <label asp-for="ReviewContent">Review</label>
                            <textarea asp-for="ReviewContent" class="form-control ht-140" placeholder="Your Review"></textarea>
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="form-group">
                            <button type="submit" class="btn theme-bg btn-md">Submit Review</button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>

</div>