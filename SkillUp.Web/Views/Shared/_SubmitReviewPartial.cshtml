@model CreateCourseReviewVM

 <!-- Reviews Detail -->
<div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">

    <!-- Overall Reviews -->
    <div class="rating-overview">
        <div class="rating-overview-box">
