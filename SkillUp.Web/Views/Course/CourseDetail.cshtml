    @{
    ViewData["Title"] = "SkillUp-CourseDetail";
}
@model Course
<!-- ============================ Page Title Start ================================== -->
<div class="ed_detail_head bg-cover" style="background:#f4f4f4 url(https://via.placeholder.com/1920x1200);" data-overlay="8">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-7 col-md-7">
                <div class="ed_detail_wrap light">
                    <div class="crs_cates cl_1"><span>
                            @foreach (var category in Model.CourseCategories?.Where(pc => pc.CategoryId == Model.Id))
                            {
                                <span>@category.Category.Name</span>

                            }
                        </span></div><div class="crs_cates cl_3"></div>
                    <div class="ed_header_caption">
                        <h2 class="ed_title">@Model.Name</h2>
                        <ul>
                            <li><i class="ti-control-forward"></i>
                                @if (Model.Paragraphs.Sum(x => x.Lectures.Count)==0)
                                {
                                    <span>Video is not available</span>
                                }
                                @if (Model.Paragraphs.Sum(x => x.Lectures.Count)==1)
                                {
                                    <span>@Model.Paragraphs.Sum(x=>x.Lectures.Count) Lecture</span>
                                }
                                @if (Model.Paragraphs.Sum(x => x.Lectures.Count) > 1)
                                {
                                    <span>@Model.Paragraphs.Sum(x=>x.Lectures.Count) Lectures</span>
                                }

                                
                            <li><i class="ti-user"></i><span>@Model.AppUserCourses.Count Student Enrolled</span> </li>
                        </ul>
                    </div>
                    <div class="ed_header_short">
                        <p>@Model.Description.</p>
                    </div>

                    <div class="ed_rate_info">
                        <div class="star_info">
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="review_counter">
                            <strong class="high">4.7</strong> 3572 Reviews
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- ============================ Page Title End ================================== -->


<!-- ============================ Course Detail Start ================================== -->
<section class="gray pt-3">
    <div class="container">
        <div class="row justify-content-between">

            <div class="col-lg-8 col-md-12 order-lg-first">

                <!-- All Info Show in Tab -->
                <div class="tab_box_info mt-4">
                    <ul class="nav nav-pills mb-3 light" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="overview-tab" data-toggle="pill" href="#overview" role="tab" aria-controls="overview" aria-selected="true">Overview</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="curriculum-tab" data-toggle="pill" href="#curriculum" role="tab" aria-controls="curriculum" aria-selected="false">Curriculum</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="instructors-tab" data-toggle="pill" href="#instructors" role="tab" aria-controls="instructors" aria-selected="false">Instructor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="reviews-tab" data-toggle="pill" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">Reviews</a>
                        </li>
                    </ul>

                    <div class="tab-content" id="pills-tabContent">

                        <!-- Overview Detail -->
                        <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
                            <!-- Overview -->
                            <div class="edu_wraper">
                                <h4 class="edu_title">Course Overview</h4>
                                <p>@Model.CourseOverview.</p>
                                <h6>Requirements</h6>
                               <p>@Model.Requirement</p>
                            </div>

                            <div class="edu_wraper">
                                <h4 class="edu_title">Certification</h4>
                                <p>@Model.Certification.</p>
                            </div>

                        </div>

                        <!-- Curriculum Detail -->
                        <div class="tab-pane fade" id="curriculum" role="tabpanel" aria-labelledby="curriculum-tab">
                            <div class="edu_wraper">
                                <h4 class="edu_title">Course Circullum</h4>
                                <div id="accordionExample" class="accordion shadow circullum">
                                    @foreach (var item in Model.Paragraphs)
                                    {
                                       
                                            <!-- Part 1 -->
                                            <div class="card">
                                                <div id="headingOne" class="card-header bg-white shadow-sm border-0">
                                                    <h6 class="mb-0 accordion_title"><a href="#" data-toggle="collapse" data-target="#" aria-expanded="true" aria-controls="" class="d-block position-relative text-dark collapsible-link py-2">Part 01:@item.Name</a></h6>
                                                </div>
                                                <div id="collapseOne" aria-labelledby="headingOne" data-parent="#accordionExample" class="collapse show">
                                                    <div class="card-body pl-3 pr-3">
                                                        <ul class="lectures_lists">
                                                          @foreach (var lectures in item.Lectures)
                                                            {
                                                                if (lectures.IsWatched==true)
                                                                {
                                                                  <li class="complete"><div class="lectures_lists_title"><i class="fas fa-check dios"></i></div>@lectures.Name<span class="cls_timing">40:20</span></li>
                                                                    
                                                                }
                                                                if (lectures.IsWatched == false)
                                                                {
                                                                    <li class="unview"><div class="lectures_lists_title"><i class="fa fa-lock dios lock"></i></div>@lectures.Name<span class="cls_timing">32:10</span></li>
                                                                    
                                                                }
                                                                if(lectures.IsWatched == null)
                                                                {
                                                                    <li class="progressing"><div class="lectures_lists_title"><i class="fas fa-play dios"></i></div>@lectures.Name<span class="cls_timing">20:12</span></li>
                                                                    
                                                                }
                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Instructor Detail -->
                        <div class="tab-pane fade" id="instructors" role="tabpanel" aria-labelledby="instructors-tab">
                            <div class="single_instructor">
                                <div class="single_instructor_thumb">
                                   <a href="#"><img src="~/user/assets/instructorimg/@Model.Instructor.ImageUrl" class="img-fluid" alt=""></a>
                               </div>
                                <div class="single_instructor_caption">
                                   <h4><a asp-controller="Instructor" asp-action="InstructorDetail" asp-route-id="@Model.Instructor.Id">@(Model.Instructor.Name + " " + Model.Instructor.Surname)</a></h4>
                                   <ul class="instructor_info">
                                        <li><i class="ti-video-camera"></i>
                                           @if (Model.Instructor.Courses.Count == 0)
                                            {
                                                <span>Course is not available</span>
                                            }
                                            @if (Model.Instructor.Courses.Count==1)
                                            {
                                                <span>@Model.Instructor.Courses.Count Course</span>
                                           }
                                            @if (Model.Instructor.Courses.Count > 1)
                                            {
                                                <span>@Model.Instructor.Courses.Count Courses</span>
                                            }
                                            </li>
                                        <li><i class="ti-control-forward"></i>
                                            @foreach (var item in Model.Instructor.Courses)
                                            {
                                                @foreach (var lectures in item.Paragraphs)
                                                {
                                                    
                                                    if (lectures.Lectures.Count>1)
                                                    {
                                                       <span>@lectures.Lectures.Count Lectures </span>
                                                    }
                                                    else
                                                    {
                                                      <span>@lectures.Lectures.Count Lecture </span>
                                                    }
                                                }
                                            }
                                            </li>
                                        <li><i class="ti-user"></i>Exp. @(Model.Instructor.Experince) Year</li>
                                    </ul>
                                    <p>@Model.Instructor.Description.</p>
                                    <ul class="social_info">
                                        @if (Model.Instructor.FaceBookUrl != null)
                                        {
                                            <li><a href="@Model.Instructor.FaceBookUrl"><i class="ti-facebook"></i></a></li>
                                        }
                                        @if (Model.Instructor.TwitterUrl != null)
                                        {
                                            <li><a href="@Model.Instructor.TwitterUrl"><i class="ti-twitter"></i></a></li>
                                        }
                                        @if (Model.Instructor.LinkedInUrl != null)
                                        {
                                            <li><a href="@Model.Instructor.LinkedInUrl"><i class="ti-linkedin"></i></a></li>
                                        }
                                        @if (Model.Instructor.InstagramUrl != null)
                                        {
                                            <li><a href="@Model.Instructor.InstagramUrl"><i class="ti-instagram"></i></a></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- Reviews Detail -->
                        <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                            <!-- Overall Reviews -->
                            <div class="rating-overview">
                                <div class="rating-overview-box">
                                    <span class="rating-overview-box-total">4.2</span>
                                    <span class="rating-overview-box-percent">out of 5.0</span>
                                    <div class="star-rating" data-rating="5">
                                        <i class="ti-star"></i><i class="ti-star"></i><i class="ti-star"></i><i class="ti-star"></i><i class="ti-star"></i>
                                    </div>
                                </div>

                                <div class="rating-bars">
                                    <div class="rating-bars-item">
                                        <span class="rating-bars-name">5 Star</span>
                                        <span class="rating-bars-inner">
                                            <span class="rating-bars-rating high" data-rating="4.7">
                                                <span class="rating-bars-rating-inner" style="width: 85%;"></span>
                                            </span>
                                            <strong>85%</strong>
                                        </span>
                                    </div>
                                    <div class="rating-bars-item">
                                        <span class="rating-bars-name">4 Star</span>
                                        <span class="rating-bars-inner">
                                            <span class="rating-bars-rating good" data-rating="3.9">
                                                <span class="rating-bars-rating-inner" style="width: 75%;"></span>
                                            </span>
                                            <strong>75%</strong>
                                        </span>
                                    </div>
                                    <div class="rating-bars-item">
                                        <span class="rating-bars-name">3 Star</span>
                                        <span class="rating-bars-inner">
                                            <span class="rating-bars-rating mid" data-rating="3.2">
                                                <span class="rating-bars-rating-inner" style="width: 52.2%;"></span>
                                            </span>
                                            <strong>53%</strong>
                                        </span>
                                    </div>
                                    <div class="rating-bars-item">
                                        <span class="rating-bars-name">1 Star</span>
                                        <span class="rating-bars-inner">
                                            <span class="rating-bars-rating poor" data-rating="2.0">
                                                <span class="rating-bars-rating-inner" style="width:20%;"></span>
                                            </span>
                                            <strong>20%</strong>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Reviews -->
                            <div class="list-single-main-item fl-wrap">
                                <div class="list-single-main-item-title fl-wrap">
                                    <h3>Course Reviews -  <span> @Model.CourseReviews.Count </span></h3>
                               </div>
                                <div class="reviews-comments-wrap">
                                    @foreach (var review in Model.CourseReviews)
                                    {
                                        <!-- reviews-comments-item -->
                                        <div class="reviews-comments-item">
                                            <div class="review-comments-avatar">
                                                @if (review.AppUser.ImageUrl!=null)
                                                {
                                                    <img src="~/user/assets/userimg/@review.AppUser.ImageUrl" class="img-fluid" alt="">
                                                }
                                                else
                                                {
                                                    <img src="~/user/assets/userimg/userimage.png" class="img-fluid" alt="">
                                                }
                                            </div>
                                            <div class="reviews-comments-item-text">
                                                <h4><a href="#">@(review.AppUser.Name + " " + review.AppUser.Surname)</a><span class="reviews-comments-item-date"><i class="ti-calendar theme-cl"></i>@review.ReviewDate.ToString("MM/dd/yyyy h:mm tt")</span></h4>

                                                <div class="listing-rating"><i class="fas fa-star active"></i><i class="fas fa-star active"></i><i class="fas fa-star active"></i><i class="fas fa-star active"></i><i class="fas fa-star active"></i></div>
                                                <div class="clearfix"></div>
                                                <p>"@review.ReviewContent"</p>
                                                <div class="pull-left reviews-reaction">
                                                </div>
                                            </div>
                                        </div>
                                        <!--reviews-comments-item end-->
                                    }
                                </div>
                            </div>
                        </div>

@*                       @await Html.PartialAsync("_SubmitReviewPartial",Model.CourseReviews, new ViewDataDictionary(ViewData){{"courseid" , Model.Id}})
*@
                    </div>
                </div>

            </div>

            <!-- Sidebar -->
            <div class="col-lg-4 col-md-12  order-lg-last">

                <!-- Course info -->
                <div class="ed_view_box style_3 ovrlio stick_top">

                    <div class="property_video sm">
                        <div class="thumb">
                            <video class="pro_img img-fluid w100"  src="~/user/assets/coursepreview/@Model.PreviewUrl" controls loop></video>
                        </div>
                    </div>

                    <div class="ed_view_price pl-3">
                        <span>Acctual Price</span>
                        <h2 class="theme-cl">
                            @if (Model.Price>0)
                            {
                                <h2 class="theme-cl">$@Model.Price</h2>
                            }
                            else
                            {
                                <h2 class ="theme-cl">Free</h2>
                            }
                        </h2>
                    </div>

                    <div class="ed_view_features half_list pl-3 pr-1">
                        <span>Course Features</span>
                        <ul>
                            <li><i class="ti-user"></i>
                                @if (Model.AppUserCourses.Count == 0)
                                {
                                    <span>Be the First to Enroll</span>
                                }
                                @if (Model.AppUserCourses.Count == 1)
                                {
                                    <span>@Model.AppUserCourses.Count Student Enroll</span>
                                    
                                }
                                @if (Model.AppUserCourses.Count >1)
                                {
                                    <span>@Model.AppUserCourses.Count Students Enroll</span>
                                }
                               </li>
                            <li><i class="ti-time"></i>2 hour 30 min</li>
                            <li><i class="ti-bar-chart-alt"></i>Principiante</li>
                            <li><i class="ti-cup"></i>04 Certified</li>
                        </ul>
                    </div>
                    <div class="ed_view_link">
                        <a asp-action="BuyCourse" asp-controller="Payment" asp-route-id="@Model.Id" class="btn theme-bg enroll-btn">Buy Now<i class="ti-angle-right"></i></a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
<!-- ============================ Course Detail End ================================== -->
